{
  "uid": "deploy-safety",
  "title": "Deployment & Rollout Safety",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "15s",
  "panels": [
    {
      "type": "stat",
      "title": "Updated Replicas",
      "targets": [
        {
          "expr": "kube_deployment_status_updated_replicas{namespace=\"default\",deployment=~\"app.*\"}"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Available Replicas",
      "targets": [
        {
          "expr": "kube_deployment_status_replicas_available{namespace=\"default\",deployment=~\"app.*\"}"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Unavailable Replicas",
      "targets": [
        {
          "expr": "kube_deployment_status_unavailable_replicas{namespace=\"default\",deployment=~\"app.*\"}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Restarts During Rollout",
      "targets": [
        {
          "expr": "sum(rate(kube_pod_container_status_restarts_total{namespace=\"default\",pod=~\"app.*\"}[5m]))"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Pod Age",
      "targets": [
        {
          "expr": "time() - kube_pod_start_time{namespace=\"default\",pod=~\"app.*\"}"
        }
      ]
    }
  ]
}

